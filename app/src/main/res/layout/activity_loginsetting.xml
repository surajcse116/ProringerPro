<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.llc.proringer.pro.proringerpro.activities.LoginSettingActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary">

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Terms"
            android:textColor="@color/colorTextDark"
            android:textSize="16sp" />

    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBGblueShade"
        android:fillViewport="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none"
        app:layout_collapseParallaxMultiplier="1.0">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Current Email"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDark"
            android:textSize="15sp" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/current_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/background_disable_inputtext"
            android:hint=""
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorTextDark"
            android:textSize="16sp" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="New Email"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDark"
            android:textSize="15sp" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
            android:id="@+id/new_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text_selecter"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="confirm New Email"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDark"
            android:textSize="15sp" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
            android:id="@+id/confirm_new_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edit_text_selecter"
            android:inputType="textEmailAddress"
            android:imeOptions="actionDone"
            android:padding="10dp"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/update_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="UPDATE EMAIL"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Current password"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDark"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
                android:id="@+id/current_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_selecter"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/colorTextDark"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/show_password"
                android:layout_width="56dp"
                android:layout_height="46dp"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:src="@drawable/ic_show_password" />
        </RelativeLayout>

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="New password"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDark"
            android:textSize="15sp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_selecter"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/colorTextDark"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/show_passwordnew"
                android:layout_width="56dp"
                android:layout_height="46dp"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:src="@drawable/ic_show_password" />
        </RelativeLayout>

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm New password"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDark"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
                android:id="@+id/confirm_new_password"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_selecter"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/colorTextDark"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/show_passwordconfirm"
                android:layout_width="56dp"
                android:layout_height="46dp"
                android:layout_alignParentRight="true"
                android:padding="8dp"
                android:src="@drawable/ic_show_password" />
        </RelativeLayout>
        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="CHANGE PASSWORD"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </LinearLayout>
    </ScrollView>


</LinearLayout>
