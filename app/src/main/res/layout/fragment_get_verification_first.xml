<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Verify Contact Information"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorBGblueShade">

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Letâ€™s get started with verifing your phone number. To verify your primary business phone number, ProRinger will send a PIN code."
            android:textSize="14sp" />


        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_marginTop="30dp" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/ph_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv3"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ph_field"
            android:layout_marginTop="10dp"
            android:background="#f4f4f4">

            <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                android:id="@+id/txt_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />
            <!--<com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/ph_field"
                android:textStyle="bold"
                />-->

        </LinearLayout>

        <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
            android:id="@+id/et_confirmphoneno"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_below="@id/l2"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_selecter"
            android:hint="Phone number"
            android:inputType="number"
            android:maxLength="14"
            android:paddingLeft="5dp"
            android:singleLine="true"/>

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/send_now"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/et_confirmphoneno"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="SEND NOW"
            android:textColor="@color/colorPrimary"/>

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_now"
            android:layout_marginTop="20dp"
            android:buttonTint="@color/colorAccent"
            android:text="I would like to start the verification process for my business"
            android:textSize="15sp" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:textSize="10sp" />

    </RelativeLayout>

</RelativeLayout>