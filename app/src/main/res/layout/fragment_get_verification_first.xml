<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >




    <TextView
        android:gravity="center"
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Verify Contact Information"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_marginLeft="5dp"

        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:background="#f4f4f4">

        <TextView
            android:layout_marginTop="10dp"

            android:id="@+id/tv2"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Letâ€™s get started with verifing your phone number. To verify your primary business phone number, ProRinger will send a PIN code." />

        <View
            android:layout_below="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="20dp"></View>

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2" />
        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:layout_height="wrap_content"
            android:layout_below="@id/tv3"
            android:layout_width="wrap_content"
            android:id="@+id/ph_field"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="#f4f4f4"
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ph_field">

            <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                android:id="@+id/txt_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp" />
            <!--<com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/ph_field"
                android:textStyle="bold"
                />-->

        </LinearLayout>
        <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
            android:layout_marginTop="10dp"
            android:layout_below="@id/l2"
            android:hint="Phone number"
            android:inputType="number"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:maxLength="14"
            android:layout_width="200dp"
            android:id="@+id/et_confirmphoneno"
            android:layout_height="45dp"
            android:background="@drawable/edit_text_selecter">


        </com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText>

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:layout_height="40dp"
            android:layout_width="match_parent"
            android:text="SEND NOW"
            android:layout_marginTop="20dp"
            android:layout_below="@id/et_confirmphoneno"
            android:gravity="center"


            android:id="@+id/send_now"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorAccent"
           ></com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView>
        <CheckBox

            android:id="@+id/cb_"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:buttonTint="@color/colorAccent"
            android:text="I would like to start the verification process for my business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_now"/>

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:padding="5dp"


            android:layout_marginBottom="10dp"
            android:textSize="10sp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv4"/>
    </RelativeLayout>





</RelativeLayout>