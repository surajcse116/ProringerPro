<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorBGblueShade"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary">

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="PortFolio"
            android:textColor="@color/colorTextDark"
            android:textSize="16sp"
            app:textAllCaps="true" />

        <ImageView
            android:id="@+id/img_add_port_folio"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:padding="8dp"
            android:src="@drawable/ic_portfolio_add" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rcv_port_folio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        ></android.support.v7.widget.RecyclerView>


    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/RLAddPortFolio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv_save_port_folio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="SAVE"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_text_selecter"
            android:hint="Categort"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />


        <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
            android:id="@+id/tv_month"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@+id/tv_category"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_selecter"
            android:hint="Month"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />


        <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
            android:id="@+id/tv_year"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_below="@+id/tv_month"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_selecter"
            android:hint="Year"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv_upload_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_year"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="add up to 10 photos"
            app:textAllCaps="true" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProSemiBoldTextView
            android:id="@+id/tv_add"
            android:layout_width="150dp"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/tv_upload_limit"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="Add Photos"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:layout_above="@+id/tv_save_port_folio"
            android:id="@+id/rcv_add_port_folio"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/LLNetworkDisconnection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wifi_disconnect" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv_network"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Check Your Network Connection"
            android:textColor="@color/colorTextBlack" />


    </LinearLayout>


</LinearLayout>