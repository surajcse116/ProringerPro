<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:id="@+id/date_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/oval_orange_background"
        android:gravity="center"
        android:padding="2dp"
        android:text="dd/mm/yyy"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:background="@color/colorLightOrange">
        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/sender_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/colorLightOrange"
            android:maxWidth="250dp"
            android:padding="10dp"
            android:text="blah blah blah blah blaaaahhhhh... blaaa . bla bla bla blahhh bla bla bla bla blaaaaaaa.. aa blahh blah and blahhhk."
            android:textColor="@color/colorTextDark"
            android:textSize="14sp"
            android:visibility="visible" />
            <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="-10dp"
                android:text="9.16PM
"
                android:paddingBottom="4dp"
                android:paddingRight="10dp"
                ></com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView>

</LinearLayout>
        <RelativeLayout
            android:id="@+id/sender_image_cont"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentRight="true"
            android:visibility="visible">

            <ImageView
                android:id="@+id/sender_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                android:id="@+id/sender_image_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:alpha="0.7"
                android:background="@android:color/background_dark"
                android:gravity="center"
                android:padding="2dp"
                android:text="9:13 PM"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>