<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialogbackcolour">
    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:id="@+id/text_heading"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:textSize="18sp"
        android:textColor="@color/colorTextBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending Approval"/>
    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:layout_below="@+id/text_heading"
        android:textColor="@color/colorTextDark"
        android:textSize="15sp"
        android:padding="10dp"
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your information was submitted for review."/>
    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:layout_width="match_parent"
        android:layout_below="@+id/tv1"
        android:id="@+id/tv2"
        android:padding="10dp"
        android:textColor="@color/colorTextDark"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:text="If any further information is needed a ProRinger representative will reach out to you. Once your information has been reviewed and is satisifactory to approval requirements we will mark your account as a verified business."
        />
<com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
    android:layout_height="45dp"
    android:layout_marginLeft="10dp"
    android:layout_width="200dp"
    android:hint="Enter Pin"
    android:paddingLeft="5dp"
    android:background="@drawable/edit_text_selecter"
    android:id="@+id/et_pin_number"
    android:layout_below="@id/tv2"
    android:maxLength="6"
    />
    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:id="@+id/tv_confirm_fifth"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="CONFIRM"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_below="@+id/tv2"
        android:layout_toRightOf="@id/et_pin_number"
        android:background="@color/colorAccent"/>
    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:layout_width="match_parent"
        android:text="CLOSE"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:id="@+id/tv_close"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorAccent"
        android:layout_height="45dp" />


</RelativeLayout>