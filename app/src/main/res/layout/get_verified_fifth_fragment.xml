<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBGblueShade">

    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:id="@+id/text_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:text="Pending Approval"
        android:textColor="@color/colorTextBlack"
        android:textSize="18sp" />

    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_heading"
        android:padding="10dp"
        android:text="Your information was submitted for review."
        android:textColor="@color/colorTextDark"
        android:textSize="15sp" />

    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:padding="10dp"
        android:text="If any further information is needed a ProRinger representative will reach out to you. Once your information has been reviewed and is satisifactory to approval requirements we will mark your account as a verified business."
        android:textColor="@color/colorTextDark"
        android:textSize="15sp" />

    <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
        android:id="@+id/et_pin_number"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@id/tv2"
        android:layout_marginLeft="10dp"
        android:background="@drawable/edit_text_selecter"
        android:hint="Enter Pin"
        android:maxLength="6"
        android:inputType="number"
        android:paddingLeft="5dp" />

    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:id="@+id/tv_confirm_fifth"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_below="@+id/tv2"
        android:layout_toRightOf="@id/et_pin_number"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="CONFIRM"
        android:textColor="@color/colorPrimary" />

    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:id="@+id/tv_close"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="CLOSE"
        android:textColor="@color/colorPrimary" />


</RelativeLayout>