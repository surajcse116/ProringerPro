                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
