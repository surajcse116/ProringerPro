<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:id="@+id/LL_Main"
android:orientation="vertical">


    <LinearLayout
        android:id="@+id/find_local_pros"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        android:elevation="6dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorGreen"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="21dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_search" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="SEARCH LOCAL PROS"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </LinearLayout>


    <android.support.v7.widget.CardView
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/linear_layout_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="110dp">

            <ImageView
                android:id="@+id/img_project"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@color/colorBGblueShade"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProSemiBoldTextView
                    android:id="@+id/tv_pros_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="30dp"
                    android:text="Jims Plumbing Service"
                    android:textColor="#231f20"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_favorite"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_favorite" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="0dp"
                android:paddingTop="5dp"
                android:gravity="center_vertical">

                <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                    android:id="@+id/tv_category_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingLeft="0dp"
                    android:text="plumbers"
                    android:textColor="@color/colorTextDark"
                    android:textSize="11sp" />
                <ImageView
                    android:id="@+id/tv_category_dot"
                    android:layout_width="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/ic_circle"
                   android:layout_gravity="center" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/ic_address_holder"
                        android:layout_width="10dp"
                        android:layout_height="10dp"/>

                    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                        android:layout_marginLeft="2dp"
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Colombus,OH"
                        android:textColor="@color/colorTextDark"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:gravity="center_vertical">

                <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                    android:id="@+id/tv_categor_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:maxLines="1"
                    android:paddingLeft="0dp"
                    android:text="Fucet "
                    android:textColor="@color/colorTextDark"
                    android:textSize="11sp" />
                <ImageView
                    android:id="@+id/tv_category_dot1"
                    android:layout_width="5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_height="5dp"
                    android:src="@drawable/ic_circle"
                    android:layout_gravity="center" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">



                    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                        android:layout_marginLeft="2dp"
                        android:id="@+id/tv_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingLeft="3dp"
                        android:text="installation"
                        android:textColor="@color/colorTextDark"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>


            <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="4"

                android:text="Hello world its blah ! blah blah blah blah blah blah blah bl blahblah blah blah blah blah blah blah bl blahblah blah blah blah blah blah blah bl blah...... "
                android:textColor="@color/colorTextDark"
                android:textSize="10sp" />

<com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProLightTextView
    android:layout_width="match_parent"
    android:layout_height="15dp"
    android:layout_marginTop="-6dp"
    android:text="5 hours ago"
    android:textAlignment="textEnd"
    android:textSize="8sp"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>