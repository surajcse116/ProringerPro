<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img_popup"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_close_black_24dp"/>
    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProExtraBoldTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text"
        android:layout_below="@+id/logo"
        android:textColor="#4e4e4d"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        android:text="Cancel Campaign"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_text"
        android:id="@+id/view"
        android:background="@color/colorLightGray" />
    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text1"
        android:layout_below="@+id/view"
        android:textSize="14sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Are you sure you want to cancel current subscription?"
        android:layout_marginTop="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/tv_text1"
        android:id="@+id/view1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorTextBlack" />


    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:id="@+id/tv_save"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/view1"
        android:layout_below="@+id/view1"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="17dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="confirm"
        android:textAllCaps="true"
        android:layout_marginBottom="10dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />
    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:id="@+id/tv_cancle"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Cancle"
        android:textStyle="bold"
        android:textColor="@color/colorSky"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/view1"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="17dp"
        android:textAllCaps="true"
        android:textSize="16sp" />


</RelativeLayout>