<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorBGblueShade"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary">

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="REQUEST REVIEW"
            android:textColor="@color/colorTextDark"
            android:textSize="16sp"
            app:textAllCaps="true" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/RLAddLicence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv_request_review"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="REQUEST REVIEW"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/tv_request_review"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorDarkGray" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
                    android:id="@+id/tv_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_selecter"
                    android:hint="First Name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp" />

                <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
                    android:id="@+id/tv_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_first_name"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_selecter"
                    android:hint="Last Name"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp" />

                <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_last_name"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_selecter"
                    android:hint="Email"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp" />

                <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
                    android:id="@+id/tv_confirm_email"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tv_email"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_selecter"
                    android:hint="Confirm Email"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp" />

                <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tv_confirm_email"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit_text_selecter"
                    android:gravity="top"
                    android:hint="Comment"
                    android:inputType="textAutoCorrect|textMultiLine"
                    android:maxHeight="400dp"
                    android:minHeight="200dp"
                    android:padding="10dp"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp" />

            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>

</LinearLayout>