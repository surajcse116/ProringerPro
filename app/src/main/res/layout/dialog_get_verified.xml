<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="Verify Contact Information"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/ic_close_circular_button_of_a_cross" />


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorBGblueShade">

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Letâ€™s get started with verifing your phone number. To verify your primary business phone number, ProRinger will send a PIN code."
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/tv2"/>

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:layout_marginTop="10dp" />


        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:layout_below="@+id/tv3"
            android:id="@+id/txt_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />


        <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText
            android:id="@+id/et_confirmphoneno"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_below="@id/txt_note"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_selecter"
            android:hint="Phone number"
            android:inputType="number"
            android:maxLength="14"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:lines="1"
            android:singleLine="true"
            android:textColor="@color/colorTextDark"
            android:textSize="14sp">


        </com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProLightEditText>



        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:layout_marginTop="10dp"
            android:id="@+id/send_now"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/et_confirmphoneno"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="SEND NOW"
            android:textColor="@color/colorPrimary"/>

        <CheckBox
            android:id="@+id/cb_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_now"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/colorAccent"
            android:text="I would like to start the verification process for my business"
            android:textColor="@color/colorTextDark"
            android:textSize="15sp" />

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cb_"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textSize="10sp" />
    </RelativeLayout>


</RelativeLayout>