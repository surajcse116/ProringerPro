<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.llc.proringer.pro.proringerpro.activities.Quick_reply">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="20dp"
            android:id="@+id/checkbox"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_autoreply"
                android:buttonTint="#cecdcd"
                android:padding="5dp"/>

            <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enable auto quick reply message."
                android:textSize="14sp" />
        </LinearLayout>
        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="SAVE"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
        <View
            android:layout_above="@+id/tv_submit"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/SplitLine_hor1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b6b6b3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/checkbox"
            android:layout_above="@+id/SplitLine_hor1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/background_white_with_border">
            <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:padding="8dp"
                android:paddingRight="4dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:text="  Quick Reply"/>

            <com.android.llc.proringer.pro.proringerpro.viewsmod.edittext.ProRegularEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/edt_description"
                android:imeOptions="actionDone"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:gravity="top"
                android:padding="10dp"
                android:textColorHint="@color/colorDarkGray"
                android:textSize="14sp"
                android:background="#ffffff"
                android:hint="Hi, thanks for submitting your project request with  ProRinger. We would love to speak with your  projection.When is a good time for us to discuss details? \nThanks,Name Here."
                />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>