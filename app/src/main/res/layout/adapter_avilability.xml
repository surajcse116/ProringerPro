<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/colorPrimary"
        android:weightSum="7">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
           >

            <LinearLayout
                android:id="@+id/LLFromDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProSemiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="02/20/17"
                    android:textColor="@color/colorTextDark"
                    android:textSize="13sp" />

                <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProSemiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:singleLine="true"
                    android:text="EDIT"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProRegularTextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_dash"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/LLFromDate"
                android:text=" - "
                android:textColor="@color/colorTextDark"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_toRightOf="@+id/tv_dash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProSemiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="02/20/17"
                    android:textColor="@color/colorTextDark"
                    android:textSize="12sp" />

                <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProSemiBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:maxLines="1"
                    android:text="DELETE"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />
            </LinearLayout>

        </RelativeLayout>

        <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProSemiBoldTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="2 Days"
        android:textColor="@color/colorTextDark"
        android:textSize="12sp"
        ></com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProSemiBoldTextView>

    <com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProSemiBoldTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="right"
        android:paddingRight="15dp"
        android:text="Vacation"
        android:textColor="@color/colorTextDark"
        android:textSize="12sp"
        ></com.android.llc.proringer.pro.proringerpro.viewsmod.textview.ProSemiBoldTextView>
    </LinearLayout>
</android.support.v7.widget.CardView>